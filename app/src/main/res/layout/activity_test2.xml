<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity2">

    <Button
        android:id="@+id/bMainA2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="onClickGoMain"
        android:text="Main Activity"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="TextActivity2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bTestA1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="onClickGoTest1"
        android:text="Test Activity 1"
        app:layout_constraintEnd_toEndOf="@+id/bMainA2"
        app:layout_constraintStart_toStartOf="@+id/bMainA2"
        app:layout_constraintTop_toBottomOf="@+id/bMainA2" />

    <Button
        android:id="@+id/bClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="onClickClose"
        android:text="Close"
        app:layout_constraintEnd_toEndOf="@+id/bTestA1"
        app:layout_constraintStart_toStartOf="@+id/bTestA1"
        app:layout_constraintTop_toBottomOf="@+id/bTestA1" />
</androidx.constraintlayout.widget.ConstraintLayout>